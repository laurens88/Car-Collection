<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DisplayActivity">

        <TextView
            android:id="@+id/brandD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textSize="42dp"
            android:textStyle="bold"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/typeD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brandD"
            android:text="Type"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editionD" />


        <!--    <TextView-->
        <!--        android:id="@+id/color_text"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_below="@+id/power_text"-->
        <!--        android:text="Color: "-->
        <!--        android:textSize="28dp" />-->

        <!--    <TextView-->
        <!--        android:id="@+id/year_text"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_below="@+id/color_text"-->
        <!--        android:text="Year: "-->
        <!--        android:textSize="28dp" />-->


        <TextView
            android:id="@+id/editionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typeD"
            android:layout_marginBottom="12dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/priceD"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/priceD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editionD"
            android:layout_marginBottom="12dp"
            android:text="Price: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/horsepowerD"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/horsepowerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priceD"
            android:layout_marginBottom="12dp"
            android:text="Power: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/colorD"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/colorD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horsepowerD"
            android:layout_marginBottom="12dp"
            android:text="Color: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/yearD"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/yearD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/colorD"
            android:layout_marginBottom="12dp"
            android:text="Year: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/accelerationD"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/accelerationD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/yearD"
            android:layout_marginBottom="12dp"
            android:text="0-100: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/topspeedD"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/topspeedD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/accelerationD"
            android:layout_marginBottom="12dp"
            android:text="Top speed: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/rankingD"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/rankingD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topspeedD"
            android:text="Ranking:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.575"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/editplateD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:focusable="false"
            android:hint="License plate"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/savebutton"
            app:layout_constraintEnd_toStartOf="@+id/savebutton"
            app:layout_constraintTop_toTopOf="@+id/savebutton"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/savebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/editplateD"
            android:backgroundTint="@color/teal_200"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.78"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.692" />


</androidx.constraintlayout.widget.ConstraintLayout>